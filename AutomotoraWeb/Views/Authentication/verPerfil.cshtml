@model DLL_Backend.Usuario
@using AutomotoraWeb.Controllers.Sistema;
@using AutomotoraWeb.Helpers;

@{
    ViewBag.Title = "Mi Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section HeadResources{
    @Html.Partial("_devExpressGrilla")
}

<span class="validation-summary-errors">@ViewBag.ErrorMessage</span>


<div>
    <div class="display-label">@Html.LabelForRequired(m => m.UserName)</div>
   <div class="renglon-alto"><strong>@Html.DisplayFor(m => m.UserName)</strong></div>
</div>
<div class="espacio2"></div>
<div class="clear-both"></div>

<div>
    <div class="display-label">@Html.LabelForRequired(m => m.Habilitado)</div>
    <div class="renglon-alto">@Html.DisplayFor(m => m.Habilitado)</div>
    <div class="clear-both"></div>
</div>
<div>
    <div class="display-label">@Html.LabelForRequired(m => m.EsDBA)</div>
    <div class="renglon-alto">@Html.DisplayFor(m => m.EsDBA)</div>
    <div class="clear-both"></div>
</div>
<div>
    <div class="display-label">@Html.LabelForRequired(m => m.Sucursal)</div>
    <div class="renglon-alto">@Html.EditorOrDisplayFor(m => m.Sucursal.Nombre, true)</div>
    <div class="clear-both"></div>
</div>
<div>
    <div class="display-label">@Html.LabelForRequired(m => m.MultiSucursal)</div>
   <div class="renglon-alto"> @Html.DisplayFor(m => m.MultiSucursal)</div>
    <div class="clear-both"></div>
</div>

<div class="espacio2"></div>
<div>
    @Html.Partial("_perfilesUsuario", Model.Perfiles)
</div>

<div class="clear-both"></div>

