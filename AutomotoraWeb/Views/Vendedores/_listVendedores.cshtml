@model List<DLL_Backend.Vendedor>
@using System.Web.UI.WebControls
@using AutomotoraWeb.Helpers;
@using AutomotoraWeb.Controllers.Sales.Maintenance;
@using AutomotoraWeb.Models;

@{
    
    InfoGrilla ig = new InfoGrilla();
    ig.HiddenColumns = new List<string>() { "Codigo", "Foto" , "Direccion", "FechaIngreso" }; // En esta lista hay que agregar las columnas que no se quieran mostrar en la grilla

