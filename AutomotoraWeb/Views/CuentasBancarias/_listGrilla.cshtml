@model List<DLL_Backend.CuentaBancaria>
@using System.Web.UI.WebControls;
@using AutomotoraWeb.Helpers;
@using AutomotoraWeb.Controllers.Bank.Maintenance;
@using AutomotoraWeb.Models;

@{
    InfoGrilla ig = new InfoGrilla();

    ig.VisibleColumns = new List<ColumnaGrilla>() { 
            new ColumnaGrilla {Campo="Banco", LargoMax=30},
            new ColumnaGrilla {Campo="Numero", LargoMax=30},
            new ColumnaGrilla {Campo="Tipo", LargoMax=30},
            new ColumnaGrilla {Campo="Moneda"}
     };
    
