@model DLL_Backend.Senia
@using AutomotoraWeb.Controllers.General;
@using DLL_Backend;
@using AutomotoraWeb.Controllers.Sales;

@{
    ViewBag.Title = ViewBag.NombreEntidad + ": Consulta";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<style type="text/css">
    .botonDocumento {
        margin-right:10px;
    }
</style>


<span class="validation-summary-errors">@ViewBag.ErrorMessage</span>

CONSULTA SENIA SIN IMPLEMENTAR


@using (Html.BeginForm(null, null, FormMethod.Post, new { id = "formPrincipal" })) {
    
    
    
    <div class="block">
        <div >
           <p class="block-heading"> Documentación</p>
        </div>
        <div class="block-body">
            @Html.Bootstrap().ActionLinkButton("Comprobante", "DocComprobanteSenia", DocumentacionLegalController.CONTROLLER).RouteValues(new { id = Model.Codigo }).Class("btn btn-default botonDocumento")
            @{
                if (Model.DocumentosLegalesGenerables().Contains(new DocumentoLegal { Codigo = "CV_SENIA" })) {
                    @Html.Bootstrap().ActionLinkButton("Compromiso Compraventa", "DocCompromisoSenia", DocumentacionLegalController.CONTROLLER).RouteValues(new { id = Model.Codigo }).Class("btn btn-default botonDocumento")
                }
                if (Model.DocumentosLegalesGenerables().Contains(new DocumentoLegal { Codigo = "PR_SENIA" })) {
                    @Html.Bootstrap().ActionLinkButton("Promesa", "DocPromesaSenia", DocumentacionLegalController.CONTROLLER).RouteValues(new { id = Model.Codigo }).Class("btn btn-default botonDocumento")
                }
            }
        </div>
    </div>

}