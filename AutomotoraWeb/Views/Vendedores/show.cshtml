@model List<DLL_Backend.Vendedor>

@{
    ViewBag.Title = "Vendedores";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row-fluid">
    <div class="btn-toolbar">
        <div class="btn-group">
            @(Html.Bootstrap().ActionLinkButton("Agregar Vendedor", AutomotoraWeb.Controllers.Sales.Maintenanse.VendedoresController.CREATE).AppendIcon(TwitterBootstrapMVC.Icons.plus, true).Style(TwitterBootstrap2.ButtonStyle.Primary).Title("Agregar Vendedor"))
        )
        </div>
        <div class="btn-group">
            <a class="btn btn-primary2-mf" title="Imprimir listado" href='@Url.Action(AutomotoraWeb.Controllers.Sales.Maintenanse.VendedoresController.REPORT)'>Imprimir Listado</a>
        </div>
    </div>
       
    <div id="vendedoressGrid">
        @Html.Partial("_listVendedores", Model)
    </div>
</div>

