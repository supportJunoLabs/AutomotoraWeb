@model AutomotoraWeb.Models.SellerModel

@{
    ViewBag.Title = "Eliminar";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<span class="validation-summary-errors">@ViewBag.ErrorMessage</span>

@using (Html.BeginForm(AutomotoraWeb.Controllers.Sales.Maintenanse.SellersController.DELETE, AutomotoraWeb.Controllers.Sales.Maintenanse.SellersController.SELLERS, FormMethod.Post)) {
    @Html.ValidationSummary(true)
    @Html.ValidationSummary("Se han producido errores:")

    <fieldset>
        <legend></legend>
        <div class="details-field">
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Name): 
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Name)
                @Html.HiddenFor(model => model.Name)
            </div>
            <div class="clear-both"></div>
        </div>
        <div class="details-field">
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Address): 
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Address)
                @Html.HiddenFor(model => model.Address)
            </div>
            <div class="clear-both"></div>
        </div>

        <div class="details-field">
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Telephone): 
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Telephone)
                @Html.HiddenFor(model => model.Telephone)
            </div>
            <div class="clear-both"></div>
        </div>

        <div class="details-field">
            <div class="display-label">
                @Html.DisplayNameFor(model => model.IngressDate):
            </div>
            <div class="display-field">
                @Model.IngressDate.Date.ToShortDateString()
                @Html.HiddenFor(model => model.IngressDate)
            </div>
            <div class="clear-both"></div>
        </div>
        <div class="details-field">
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Observations): 
            </div>
            <div class="display-field">
                @Html.DisplayFor(model => model.Observations)
                @Html.HiddenFor(model => model.Observations)
            </div>
            <div class="clear-both"></div>
        </div>
        <div class="details-field">
            <div class="display-label">
                @Html.DisplayNameFor(model => model.Enabled): 
            </div>
            <div class="display-field">
                @Html.CheckBoxFor(model => model.Enabled, new {@disabled="disabled"})
                @Html.HiddenFor(model => model.Enabled)
            </div>
            <div class="clear-both"></div>
        </div>
    </fieldset>
    
    <div class="espacio2"></div>
    
    <div class="btn-toolbar">
        @(Html.Bootstrap().SubmitButton().Class("btn btn-primary").Text("Eliminar").Tooltip("Eliminar Vendedor").Data(new { id = Model.Id }))
        @(Html.Bootstrap().ActionLinkButton("Cancelar", AutomotoraWeb.Controllers.Sales.Maintenanse.SellersController.SHOW, AutomotoraWeb.Controllers.Sales.Maintenanse.SellersController.SELLERS).Class("btn btn-default"))
    </div>

}


@section Scripts {
}

