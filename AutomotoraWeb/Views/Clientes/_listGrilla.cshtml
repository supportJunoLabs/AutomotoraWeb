@model List<DLL_Backend.Cliente>
@using System.Web.UI.WebControls
@using AutomotoraWeb.Helpers;
@using AutomotoraWeb.Controllers.Sales.Maintenance;
@using AutomotoraWeb.Models;

@{
   
    List<string> hiddenColumns = new List<string>() { }; // En esta lista hay que agregar las columnas que no se quieran mostrar en la grilla
    List<string> visibleColumns = new List<string>() { "Nombre", "Telefono", "OtroTelefono", "Fax", "Mail", "Observaciones" }; //agregar lo que hay que mostrar, si queda vacio se muestra todo
    Dictionary<string, int> trunkColumns = new Dictionary<string, int>() { { "Telefono", 30 }, { "OtroTelefono", 30 }, { "Fax", 30 }, { "Mail", 30 }, { "Observaciones", 40 } };

    InfoGrilla ig = new InfoGrilla();

    ig.HiddenColumns = hiddenColumns;
    ig.VisibleColumns = visibleColumns;
    ig.TrunkColumns = trunkColumns;
    ig.NameGrid = "grilla";
    ig.Controller = ClientesController.CONTROLLER;
    ig.ActionCallbackRoute = "listaGrilla";
    ig.KeyFieldName = "Codigo";
    ig.TypeOfModel = typeof(DLL_Backend.Cliente.ClienteMD);

    ViewBag.InfoGrilla = ig;
}

@Html.Partial("_generalGrid", Model)

