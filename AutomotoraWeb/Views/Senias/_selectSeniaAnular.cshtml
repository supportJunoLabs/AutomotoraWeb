@model GridLookUpModel
@using DLL_Backend;
@using System.Web.UI.WebControls;
@using AutomotoraWeb.Models;
@using AutomotoraWeb.Controllers.Sales;

@{
    InfoGrilla ig = new InfoGrilla();
    ig.TipoControl = InfoGrilla.TIPO_CONTROL.GRIDLOOKUP;
    ig.VisibleColumns = new List<ColumnaGrilla>() { 
        new ColumnaGrilla {Campo="Codigo", Ancho=70, Titulo="Codigo"}, 
        new ColumnaGrilla {Campo="Fecha", Ancho=90, Titulo="Fecha"}, 
        new ColumnaGrilla {Campo="Vehiculo.Ficha", Ancho=90, Titulo="Vehiculo"}, 
        new ColumnaGrilla {Campo="Pedido.Codigo", Ancho=70, Titulo="Pedido"}, 
        new ColumnaGrilla {Campo="MarcaElemento", Ancho=150, Titulo="Marca"},
        new ColumnaGrilla {Campo="ModeloElemento", Ancho=150, Titulo="Modelo"},
        new ColumnaGrilla {Campo="Cliente.Nombre", Ancho=200, Titulo="Cliente", LargoMax=20}
    };

    ig.NameGrid = "gridSeniasDev";
    ig.Controller = SeniasController.CONTROLLER;
    ig.ActionCallbackRoute = "SeniasDevolviblesGrilla";
    ig.KeyFieldName = "Codigo";
    ig.TypeOfModel = typeof(DLL_Backend.Senia);
    ig.FormatoSeleccionLookup = "{0}, {1:dd/MM/yyyy}, Ficha: {2}, Pedido: {3}, {4}, {5}";
    ig.registrosPorPagina = 10;
    ig.AnchoSeleccion = 550;

    ig.RowClickAccion = "seniaDevolverSelected";

    ViewBag.InfoGrilla = ig;
}

@Html.Partial("_generalGrid", Model)


