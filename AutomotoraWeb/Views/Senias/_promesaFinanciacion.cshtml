@model AutomotoraWeb.Models.SeniaModel
@using AutomotoraWeb.Controllers.General;
@using DLL_Backend;
@using AutomotoraWeb.Models;
@using AutomotoraWeb.Helpers;

@{ 
    bool modoConsulta = ((bool?)ViewBag.SoloLectura) ?? false;
}

<div class="dataLine">
    <div class="display-label">
        Importe Financiado
    </div>
    <div class="editor-field editor-field-small">
        @Html.DdlOrDisplayImporteFor(model => model.Senia.Promesa.Financiacion.MontoFinanciado, "Senia.Promesa.Financiacion.MontoFinanciado", modoConsulta)
        @Html.ValidationMessageFor(model => model.Senia.Promesa.Financiacion.MontoFinanciado.Monto)
    </div>
    <div class="clear-both"></div>
</div>

<div class="dataLine">
    <div class="display-label">
        Cant. Cuotas
    </div>
    <div class="editor-field editor-field-small">
        @Html.TextBoxOrdisplayFor(model => model.Senia.Promesa.Financiacion.CantCuotas, modoConsulta, new { @class="alinearDerecha"})
        @Html.ValidationMessageFor(model => model.Senia.Promesa.Financiacion.CantCuotas)
    </div>
    <div class="clear-both"></div>
</div>

<div class="dataLine">
    <div class="display-label">
        Tasa
    </div>
    <div class="editor-field editor-field-small">
        @Html.TextBoxOrdisplayFor(model => model.Senia.Promesa.Financiacion.Tasa, modoConsulta, new { @class="alinearDerecha"})
        @Html.ValidationMessageFor(model => model.Senia.Promesa.Financiacion.Tasa)
    </div>
    <div class="clear-both"></div>
</div>

<div class="dataLine">
    <div class="display-label">
        Entidad
    </div>
    <div class="editor-field editor-field-small">
        @Html.EditorOrDisplayFor(model => model.Senia.Promesa.Financiacion.EntidadFinanciera, modoConsulta)
        @Html.ValidationMessageFor(model => model.Senia.Promesa.Financiacion.EntidadFinanciera)
    </div>
    <div class="clear-both"></div>
</div>