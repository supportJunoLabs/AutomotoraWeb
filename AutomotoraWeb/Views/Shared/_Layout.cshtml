<body class="">
    <!--<![endif]-->

    <!-- HEADER, NAVBAR -->
    <div class="navbar" id="pagHeader">
        <div class="navbar-inner" id="menuHeader">
            <ul class="nav pull-right">
                <li><a href="#" class="hidden-phone visible-tablet visible-desktop" role="button">Settings</a></li>
                <li id="fat-menu" class="dropdown"><a href="#" role="button" class="dropdown-toggle"
                    data-toggle="dropdown"><i class="icon-user"></i>Nombre Usuario <i class="icon-caret-down"></i></a>
                    <ul class="dropdown-menu">
                        <li><a tabindex="-1" href="./authentication/changePassword">Cambiar contra&ntilde;a</a></li>
                        <li class="divider"></li>
                        <li><a tabindex="-1" class="visible-phone" href="#">Settings</a></li>
                        <li class="divider visible-phone"></li>
                        <li><a tabindex="-1" href="./authentication/logout">Cerrar sesi&oacute;n</a></li>
                    </ul>
                </li>
            </ul>
            <div id="nomsistema">
                <a class="brand" href="index.html"><span class="first">Sistema Gestion Automotoras</span>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<span class="second"> Kilometro Cero</span></a>
            </div>
        </div>
    </div>

    <!-- SIDEBAR -->

    @{
        string controller = @Request.RequestContext.RouteData.GetRequiredString("controller");   
    }
    
    @{
        if (controller == AutomotoraWeb.Controllers.SalesController.SALES) { 
            @Html.Partial("_sidebarSales")
        } else if (controller == AutomotoraWeb.Controllers.FinancingController.FINANCING) {
            @Html.Partial("_sidebarFinancing")
        } else if (controller == AutomotoraWeb.Controllers.BankController.BANK) {
            @Html.Partial("_sidebarBank")
        }
    }

    

    <!-- CONTENT -->
    <div class="content">
        <ul class="nav nav-pills breadcrumb">


            @{
                if (controller == AutomotoraWeb.Controllers.SalesController.SALES) { 
                    <li class="active"><a href="#">Ventas</a></li>
                    <li>@Html.ActionLink("Financiaciones", AutomotoraWeb.Controllers.FinancingController.INDEX, AutomotoraWeb.Controllers.FinancingController.FINANCING)</li>
                    <li>@Html.ActionLink("Banco", AutomotoraWeb.Controllers.BankController.INDEX, AutomotoraWeb.Controllers.BankController.BANK)</li>
                } 
                else if (controller == AutomotoraWeb.Controllers.FinancingController.FINANCING) {
                    <li>@Html.ActionLink("Ventas", AutomotoraWeb.Controllers.SalesController.INDEX, AutomotoraWeb.Controllers.SalesController.SALES)</li>
                    <li class="active"><a href="#">Financiaciones</a></li>
                    <li>@Html.ActionLink("Banco", AutomotoraWeb.Controllers.BankController.INDEX, AutomotoraWeb.Controllers.BankController.BANK)</li>
                }
                else if (controller == AutomotoraWeb.Controllers.BankController.BANK) {
                    <li>@Html.ActionLink("Ventas", AutomotoraWeb.Controllers.SalesController.INDEX, AutomotoraWeb.Controllers.SalesController.SALES)</li>
                    <li>@Html.ActionLink("Financiaciones", AutomotoraWeb.Controllers.FinancingController.INDEX, AutomotoraWeb.Controllers.FinancingController.FINANCING)</li>
                    <li class="active"><a href="#">Banco</a></li>
                }
                else{
                    <li>@Html.ActionLink("Ventas", AutomotoraWeb.Controllers.SalesController.INDEX, AutomotoraWeb.Controllers.SalesController.SALES)</li>
                    <li>@Html.ActionLink("Financiaciones", AutomotoraWeb.Controllers.FinancingController.INDEX, AutomotoraWeb.Controllers.FinancingController.FINANCING)</li>
                    <li>@Html.ActionLink("Banco", AutomotoraWeb.Controllers.BankController.INDEX, AutomotoraWeb.Controllers.BankController.BANK)</li>
                }
            }
        </ul>

        <div class="header">
            <h1 class="page-title">@ViewBag.Title</h1>
        </div>

        <div class="container-fluid">
            <div class="row-fluid contPagina">
                @RenderBody()
            </div>
        </div>
    </div>


    @Scripts.Render("~/bundles/jqueryui")  @*Los scripts de jquery-uy*@
    @Scripts.Render("~/bundles/jqueryval") @*Los scripts de validacion del jquery*@
    @RenderSection("scripts", required: false)  @*Los scripts adicionales de cada seccion si los tiene *@
</body>
</html>
