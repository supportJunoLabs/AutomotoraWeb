@model DLL_Backend.Usuario
@using AutomotoraWeb.Controllers.Sistema;
@using AutomotoraWeb.Helpers;

@{
    ViewBag.Title = "Mi Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
    
}

<div>
    <h5>@Html.LabelForRequired(m => m.UserName)
        @Html.DisplayFor(m => m.UserName)</h5>
</div>
<div class="espacio2"></div>
<div class="clear-both"></div>

<div>
    @Html.LabelForRequired(m => m.Habilitado)
    <div class="renglon-alto">@Html.DisplayFor(m => m.Habilitado)</div>
    <div class="clear-both"></div>
</div>
<div>
    @Html.LabelForRequired(m => m.EsDBA)
    <div class="renglon-alto">@Html.DisplayFor(m => m.EsDBA)</div>
    <div class="clear-both"></div>
</div>
<div>
    @Html.LabelForRequired(m => m.Sucursal)
    <div class="renglon-alto">@Html.EditorOrDisplayFor(m => m.Sucursal.Nombre, true)</div>
    <div class="clear-both"></div>
</div>
<div>
    @Html.LabelForRequired(m => m.MultiSucursal)
   <div class="renglon-alto"> @Html.DisplayFor(m => m.MultiSucursal)</div>
    <div class="clear-both"></div>
</div>

<div class="espacio2"></div>
<div>
    @Html.Partial("_perfilesUsuario", Model.Perfiles)
</div>

<div class="clear-both"></div>
<div class="espacio2" style="margin-bottom:40px"></div>
<div class="btn-toolbar">
    @(Html.Bootstrap().ActionLinkButton("Volver", "BaseUltimoModulo").Class("btn btn-default"))
</div>
