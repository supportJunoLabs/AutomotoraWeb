@using AutomotoraWeb.Controllers.Sistema;

@{
    Layout = null;  
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>SGA: Error</title>
    @Styles.Render("~/Content/css") @*Bootstrap awesome y template propio*@
</head>
<body class="http-error">
    <div class="row-fluid">
        <div class="http-error">
            <h1>Uups!</h1>
            <p class="info">
                Ha sucedido algo que no esperabamos.
            </p>
            <p>
                <i class="icon-home"></i>
            </p>
            <p>
                @(Html.Bootstrap().ActionLinkButton("Volver al inicio", SistemaController.INDEX, SistemaController.BCONTROLLER).Class("btn btn-default"))
        </div>
        <div class="espacio" />
        <div class="espacio" />
        <h3>Error en un control de DevExpress</h3>
        <div class="espacio" />
        <div>
            @{ if (Request.IsLocal) { 
                <h3>@ViewData["DXCallbackErrorMessage"]</h3>
                   
                   if (@Model != null && @Model.Exception != null) {
                        <h3>Informacion adicional: @Model.Exception.Message</h3>
                       if (@Model.Exception.InnerException != null) {
                            <h3>@Model.Exception.InnerException.Message</h3>
                           if (@Model.Exception.InnerException.InnerException != null) {
                                <h3>@Model.Exception.InnerException.InnerException.Message</h3>
                           }
                       }
                       <h5>Stack trace: @Model.Exception.StackTrace</h5>
                   } 
                   
               }}
        </div>
    </div>
</body>
</html>
