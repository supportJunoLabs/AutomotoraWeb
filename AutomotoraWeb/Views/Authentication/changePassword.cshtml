@model AutomotoraWeb.Models.ChangePasswordModel
@using AutomotoraWeb.Controllers.Sistema;

@{
    ViewBag.Title = "Cambiar clave";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <h5>Usuario:   @ViewBag.UserName</h5>
    <div class="espacio2"></div>

<section id="changePwdForm">
       <div class="block-body">
        @using (Html.BeginForm()) {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary(true)

            
            
    
            @Html.LabelFor(m => m.ActualPassword)
            @Html.PasswordFor(m => m.ActualPassword, new { @class = "span3" })
                    
            @Html.ValidationMessageFor(m => m.ActualPassword, null, new { @class = "text-error" })
                

            @Html.LabelFor(m => m.NewPassword)
            @Html.PasswordFor(m => m.NewPassword, new { @class = "span3" })
            @Html.ValidationMessageFor(m => m.NewPassword, null, new { @class = "text-error" })

            @Html.LabelFor(m => m.RepeatNewPassword)
            @Html.PasswordFor(m => m.RepeatNewPassword, new { @class = "span3" })
            @Html.ValidationMessageFor(m => m.RepeatNewPassword, null, new { @class = "text-error" })

            <div class="espacio2"></div>
            <div class="btn-toolbar">
                @(Html.Bootstrap().SubmitButton().Text("Cambiar clave").Class("btn btn-primary"))
                @(Html.Bootstrap().ActionLinkButton("Cancelar", SistemaController.INDEX, SistemaController.BCONTROLLER).Class("btn btn-default")) 
            </div>
            <div class="clearfix"></div>
         
            if ((Model != null) && (Model.ErrorCode != null)) {
                <div class="text-error">@Model.ErrorMessage</div>
            }

        }
    </div>
</section>

