@model List<DLL_Backend.Financista>
@using System.Web.UI.WebControls;
@using AutomotoraWeb.Helpers;
@using AutomotoraWeb.Controllers.Financing.Maintenance;
@using AutomotoraWeb.Models;

@{

    InfoGrilla ig = new InfoGrilla();
    ig.VisibleColumns = new List<ColumnaGrilla>() { 
            new ColumnaGrilla {Campo="Nombre"},
            new ColumnaGrilla {Campo="Telefono", LargoMax=30},
            new ColumnaGrilla {Campo="OtrosTelefonos", LargoMax=30},
            new ColumnaGrilla {Campo="Fax", LargoMax=30},
            new ColumnaGrilla {Campo="Mail", LargoMax=30},
            new ColumnaGrilla {Campo="Habilitado"},
            new ColumnaGrilla {Campo="Interno"}
     };

    ig.NameGrid = "grilla";
    ig.Controller = FinancistasController.CONTROLLER;
    ig.ActionCallbackRoute = "listaGrilla";
    ig.KeyFieldName = "Codigo";
    ig.TypeOfModel = typeof(DLL_Backend.Financista.FinancistaMD);
    ig.DobleClick = true;

    ViewBag.InfoGrilla = ig;
}

@Html.Partial("_generalGrid", Model)

