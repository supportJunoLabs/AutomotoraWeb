@model List<DLL_Backend.Vendedor>
@using System.Web.UI.WebControls
@using AutomotoraWeb.Helpers;
@using AutomotoraWeb.Controllers.Sales.Maintenance;
@using AutomotoraWeb.Models;

@{
    
    InfoGrilla ig = new InfoGrilla();

    ig.VisibleColumns = new List<ColumnaGrilla>() { 
            new ColumnaGrilla {Campo="Nombre"},
            new ColumnaGrilla {Campo="Telefono", LargoMax=30},    
            new ColumnaGrilla {Campo="Habilitado"},
            new ColumnaGrilla {Campo="Mail"},
            new ColumnaGrilla {Campo="Observaciones", LargoMax=50}
    };
        
    ig.NameGrid = "gridVendedores";
    ig.Controller = VendedoresController.CONTROLLER;
    ig.ActionCallbackRoute = "listVendedores";
    ig.KeyFieldName = "Codigo";
    ig.TypeOfModel = typeof(DLL_Backend.Vendedor.VendedorMD);
    ig.DobleClick = true;
    ig.BotonesMtoEstandar = true;
    ig.AccionesAlComienzo = true;

    ViewBag.InfoGrilla = ig;
}

@Html.Partial("_generalGrid", Model)
  
