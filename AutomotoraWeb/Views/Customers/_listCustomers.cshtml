@model List<AutomotoraWeb.Models.CustomerModel>
@using System.Web.UI.WebControls
@using AutomotoraWeb.Helpers;

@{
    List<string> hiddenColumns = new List<string>() { "Spouse", "MaritalStatus" }; // En esta lista hay que agregar las columnas que no se quieran mostrar en la grilla
    ViewBag.hiddenColumns = hiddenColumns;

    ViewBag.nameGrid = "gridCustomers";
    ViewBag.controller = "customers";
    ViewBag.actionCallbackRoute = "listCustomers";
    ViewBag.KeyFieldName = "Id";
    ViewBag.typeOfModel = typeof(AutomotoraWeb.Models.CustomerModel);
}

@Html.Partial("_generalGrid", Model)
  
