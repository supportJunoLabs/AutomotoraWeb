@model GridLookUpModel
@using DLL_Backend;
@using System.Web.UI.WebControls;
@using AutomotoraWeb.Models;
@using AutomotoraWeb.Controllers.Sales;

@{
    InfoGrilla ig = new InfoGrilla();
    ig.TipoControl = InfoGrilla.TIPO_CONTROL.GRIDLOOKUP;
    ig.VisibleColumns = new List<ColumnaGrilla>() { 
        new ColumnaGrilla {Campo="Ficha", Ancho=60, Titulo="Ficha"}, 
        new ColumnaGrilla {Campo="Anio", Ancho=60, Titulo="Año"},
        new ColumnaGrilla {Campo="Marca", Ancho=100, Titulo="Marca"},
        new ColumnaGrilla {Campo="Modelo", Ancho=100, Titulo="Modelo"},
        new ColumnaGrilla {Campo="Costo.ImporteTexto", Ancho=100, Titulo="Costo", Alineacion=ColumnaGrilla.ALINEACIONES.DERECHA},
        new ColumnaGrilla {Campo="PrecioVenta.ImporteTexto", Ancho=100, Titulo="PrecioVenta", Alineacion=ColumnaGrilla.ALINEACIONES.DERECHA},
        new ColumnaGrilla {Campo="Matricula", Ancho=85, Titulo="Matricula"},
        new ColumnaGrilla {Campo="Padron", Ancho=85, Titulo="Padron"},
        new ColumnaGrilla {Campo="Sucursal.Nombre", Ancho=100, Titulo="Sucursal"}
    };

    ig.NameGrid = "gridVehiculos";
    ig.Controller = VehiculosController.CONTROLLER;
    ig.ActionCallbackRoute = "VehiculosVendiblesGrilla";
    ig.KeyFieldName = "Codigo";
    ig.TypeOfModel = typeof(DLL_Backend.Vehiculo);
    ig.FormatoSeleccionLookup = "{0}, {1}, {2}, {3}";
    ig.registrosPorPagina = 10;
    ig.AnchoSeleccion = 530;

    ig.FocusedRowChangedAccion = "vehiculoSelected";

    ViewBag.InfoGrilla = ig;
}

@Html.Partial("_generalGrid", Model)


