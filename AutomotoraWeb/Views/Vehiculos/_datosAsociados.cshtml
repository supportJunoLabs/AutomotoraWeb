@model DLL_Backend.Vehiculo
@using AutomotoraWeb.Helpers;
@using DLL_Backend;

@{ bool acvs = false;
   List<ACuentaVenta> listaAcvs = null;
   if (Model != null && Model.Codigo > 0 && Model.TieneACVNoanulados()) {
       listaAcvs = Model.obtenerACVsNoanulados();
       acvs = true;
   }
}

<div class="well" style="margin-top: 40px; width: 1000px; height: 630px;">
    <ul class="nav nav-tabs">
        <li class="active"><a href="#gastos_tab" data-toggle="tab">Gastos</a></li>
        <li><a href="#documentacion_tab" data-toggle="tab">Documentaci&oacute;n</a></li>
        <li><a href="#fotos_tab" data-toggle="tab">Fotos</a></li>
        @{ if (acvs) {
            <li><a href="#acv_tab" data-toggle="tab">Anticipos</a> </li>
           }}
    </ul>
    <div id="myTabContent" class="tab-content">
        <div class="tab-pane active in" id="gastos_tab">
            @Html.Partial("_datosGastos", Model)
        </div>
        <div class="tab-pane fade" id="documentacion_tab">
            @Html.Partial("_datosDocumentacion", Model)
        </div>
        <div class="tab-pane fade" id="fotos_tab">
            @Html.Partial("_datosFotos", Model)
        </div>
        @{ if (acvs) {
            <div class="tab-pane fade" id="acv_tab">
                @Html.Partial("~/Views/acvs/_grillaAcvNoAnulados.cshtml",listaAcvs)
            </div>
           }}
    </div>
</div>
